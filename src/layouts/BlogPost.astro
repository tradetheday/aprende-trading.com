---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="es">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main>
			<article>
				<!-- Article Header -->
				<header class="article-header">
					<div class="article-meta">
						<span class="article-date">
							<FormattedDate date={pubDate} />
						</span>
						{updatedDate && (
							<span class="article-updated">
								Actualizado: <FormattedDate date={updatedDate} />
							</span>
						)}
					</div>
					<h1>{title}</h1>
					{description && <p class="article-description">{description}</p>}
				</header>

				<!-- Hero Image -->
				{heroImage && (
					<div class="hero-image">
						<Image width={1200} height={600} src={heroImage} alt={title} />
					</div>
				)}

				<!-- Article Content -->
				<div class="article-content">
					<slot />
				</div>

				<!-- Back to Blog -->
				<div class="article-footer">
					<a href="/blog" class="back-link">&larr; Volver a Articulos</a>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	article {
		max-width: 780px;
		margin: 0 auto;
	}

	/* Article Header */
	.article-header {
		padding-bottom: 20px;
		margin-bottom: 20px;
		border-bottom: 1px solid var(--gray-lighter);
	}

	.article-meta {
		display: flex;
		gap: 15px;
		margin-bottom: 12px;
		flex-wrap: wrap;
	}

	.article-date {
		color: var(--primary);
		font-weight: 600;
		font-size: 0.85rem;
	}

	.article-updated {
		color: var(--gray-light);
		font-size: 0.8rem;
		font-style: italic;
	}

	.article-header h1 {
		font-size: 1.75rem;
		line-height: 1.3;
		margin-bottom: 12px;
		color: var(--black);
	}

	.article-description {
		font-size: 1.05rem;
		color: var(--gray);
		line-height: 1.6;
		margin: 0;
	}

	/* Hero Image */
	.hero-image {
		margin-bottom: 25px;
	}

	.hero-image img {
		width: 100%;
		height: auto;
	}

	/* Article Content */
	.article-content {
		padding-bottom: 25px;
	}

	.article-content :global(h2) {
		font-size: 1.4rem;
		margin-top: 30px;
		margin-bottom: 12px;
		padding-bottom: 8px;
		border-bottom: 2px solid var(--primary);
		color: var(--black);
	}

	.article-content :global(h3) {
		font-size: 1.2rem;
		margin-top: 25px;
		margin-bottom: 10px;
		color: var(--primary);
	}

	.article-content :global(h4) {
		font-size: 1.05rem;
		margin-top: 20px;
		margin-bottom: 8px;
		color: var(--black);
	}

	.article-content :global(p) {
		line-height: 1.75;
		margin-bottom: 1.15rem;
		color: var(--gray-dark);
	}

	.article-content :global(img) {
		margin: 20px 0;
	}

	.article-content :global(ul),
	.article-content :global(ol) {
		margin: 1.15rem 0 1.15rem 1.5rem;
	}

	.article-content :global(li) {
		margin-bottom: 0.4rem;
		line-height: 1.7;
	}

	.article-content :global(blockquote) {
		margin: 20px 0;
		padding: 15px 20px;
		background: var(--gray-bg);
		border-left: 4px solid var(--primary);
	}

	.article-content :global(blockquote p) {
		margin: 0;
		font-style: italic;
		color: var(--gray);
	}

	.article-content :global(a) {
		color: var(--primary);
		text-decoration: underline;
	}

	.article-content :global(a:hover) {
		color: var(--primary-dark);
	}

	.article-content :global(strong) {
		color: var(--black);
		font-weight: 700;
	}

	.article-content :global(table) {
		width: 100%;
		margin: 20px 0;
		border-collapse: collapse;
	}

	.article-content :global(th),
	.article-content :global(td) {
		padding: 10px 12px;
		text-align: left;
		border-bottom: 1px solid var(--gray-lighter);
	}

	.article-content :global(th) {
		background: var(--gray-bg);
		font-weight: 700;
		color: var(--black);
	}

	/* Article Footer */
	.article-footer {
		padding: 20px 0;
		border-top: 1px solid var(--gray-lighter);
	}

	.back-link {
		display: inline-block;
		font-weight: 600;
		font-size: 0.85rem;
		color: var(--primary);
	}

	.back-link:hover {
		text-decoration: underline;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.article-header h1 {
			font-size: 1.4rem;
		}

		.article-description {
			font-size: 0.95rem;
		}

		.article-content :global(h2) {
			font-size: 1.25rem;
		}

		.article-content :global(h3) {
			font-size: 1.1rem;
		}
	}
</style>
