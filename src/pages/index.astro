---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const featuredPost = posts[0];
const recentPosts = posts.slice(1, 8);
const morePosts = posts.slice(8, 14);
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Main Content Grid - Sidebar LEFT -->
			<div class="content-grid">
				<!-- Sidebar -->
				<aside class="sidebar">
					<!-- Categories Widget -->
					<div class="widget">
						<h3 class="widget-title">Categorias</h3>
						<ul class="category-list">
							<li><a href="/blog/forex">Forex</a></li>
							<li><a href="/blog/criptomonedas">Criptomonedas</a></li>
							<li><a href="/blog/estrategia">Estrategias</a></li>
							<li><a href="/blog/brokers">Brokers</a></li>
							<li><a href="/blog/analisis-tecnico">Analisis Tecnico</a></li>
							<li><a href="/blog/futuros">Futuros</a></li>
							<li><a href="/blog/opciones">Opciones</a></li>
						</ul>
					</div>

					<!-- More Posts Widget -->
					{morePosts.length > 0 && (
						<div class="widget">
							<h3 class="widget-title">Mas Articulos</h3>
							<ul class="more-posts">
								{morePosts.map((post) => (
									<li>
										<a href={`/blog/${post.id}/`}>{post.data.title}</a>
									</li>
								))}
							</ul>
						</div>
					)}
				</aside>

				<!-- Main Content -->
				<div class="main-content">
					<!-- Featured Post -->
					{featuredPost && (
						<section class="featured">
							<a href={`/blog/${featuredPost.id}/`} class="featured-link">
								<span class="featured-label">Destacado</span>
								<h1>{featuredPost.data.title}</h1>
								<p class="featured-date">
									<FormattedDate date={featuredPost.data.pubDate} />
								</p>
								{featuredPost.data.description && (
									<p class="featured-excerpt">{featuredPost.data.description}</p>
								)}
							</a>
						</section>
					)}

					<!-- Recent Posts -->
					<section class="posts-section">
						<h2 class="section-title">Articulos Recientes</h2>
						<div class="posts-list">
							{recentPosts.map((post) => (
								<article class="post-item">
									<a href={`/blog/${post.id}/`}>
										<h3>{post.data.title}</h3>
										<span class="post-date">
											<FormattedDate date={post.data.pubDate} />
										</span>
									</a>
								</article>
							))}
						</div>
						<a href="/blog" class="view-all">Ver todos los articulos &rarr;</a>
					</section>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	/* Content Grid - Sidebar on LEFT */
	.content-grid {
		display: grid;
		grid-template-columns: 280px 1fr;
		gap: 30px;
	}

	/* Sidebar */
	.sidebar {
		display: flex;
		flex-direction: column;
		gap: 20px;
	}

	.widget {
		background: var(--gray-bg);
		padding: 18px;
	}

	.widget-title {
		font-size: 0.85rem;
		font-weight: 700;
		text-transform: uppercase;
		color: var(--black);
		padding-bottom: 8px;
		margin-bottom: 12px;
		border-bottom: 2px solid var(--primary);
	}

	.category-list,
	.more-posts {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.category-list li,
	.more-posts li {
		padding: 6px 0;
		border-bottom: 1px solid var(--gray-lighter);
	}

	.category-list li:last-child,
	.more-posts li:last-child {
		border-bottom: none;
	}

	.category-list a,
	.more-posts a {
		font-size: 0.9rem;
		color: var(--gray-dark);
	}

	.category-list a:hover,
	.more-posts a:hover {
		color: var(--primary);
	}

	/* Main Content */
	.main-content {
		min-width: 0;
	}

	/* Featured Section */
	.featured {
		background: var(--gray-bg);
		padding: 25px;
		margin-bottom: 25px;
		border-left: 4px solid var(--primary);
	}

	.featured-link {
		display: block;
		text-decoration: none;
	}

	.featured-label {
		display: inline-block;
		background: var(--primary);
		color: var(--white);
		font-size: 0.7rem;
		font-weight: 700;
		text-transform: uppercase;
		padding: 3px 8px;
		margin-bottom: 12px;
	}

	.featured h1 {
		font-size: 1.5rem;
		margin-bottom: 8px;
		color: var(--black);
	}

	.featured-link:hover h1 {
		color: var(--primary);
	}

	.featured-date {
		font-size: 0.85rem;
		color: var(--gray);
		margin-bottom: 8px;
	}

	.featured-excerpt {
		color: var(--gray);
		font-size: 0.95rem;
		margin: 0;
		line-height: 1.6;
	}

	/* Posts Section */
	.posts-section {
		min-width: 0;
	}

	.section-title {
		font-size: 0.9rem;
		font-weight: 700;
		text-transform: uppercase;
		color: var(--white);
		background: var(--primary);
		padding: 6px 12px;
		margin-bottom: 15px;
		display: inline-block;
	}

	.posts-list {
		display: flex;
		flex-direction: column;
		gap: 0;
	}

	.post-item {
		padding: 15px 0;
		border-bottom: 1px solid var(--gray-lighter);
	}

	.post-item:first-child {
		padding-top: 0;
	}

	.post-item a {
		display: block;
		text-decoration: none;
	}

	.post-item h3 {
		font-size: 1rem;
		margin-bottom: 4px;
		color: var(--black);
		transition: color 0.2s ease;
	}

	.post-item a:hover h3 {
		color: var(--primary);
	}

	.post-date {
		font-size: 0.8rem;
		color: var(--gray-light);
	}

	.view-all {
		display: inline-block;
		margin-top: 15px;
		font-weight: 600;
		font-size: 0.9rem;
		color: var(--primary);
	}

	.view-all:hover {
		text-decoration: underline;
	}

	/* Responsive */
	@media (max-width: 900px) {
		.content-grid {
			grid-template-columns: 1fr;
		}

		.sidebar {
			order: 2;
			flex-direction: row;
			flex-wrap: wrap;
		}

		.widget {
			flex: 1;
			min-width: 200px;
		}

		.main-content {
			order: 1;
		}
	}

	@media (max-width: 600px) {
		.featured {
			padding: 18px;
		}

		.featured h1 {
			font-size: 1.25rem;
		}

		.sidebar {
			flex-direction: column;
		}

		.widget {
			min-width: 100%;
		}
	}
</style>
