---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
).slice(0, 6);

const categories = [
	{ name: 'Forex', slug: 'forex', icon: 'üí±' },
	{ name: 'Criptomonedas', slug: 'criptomonedas', icon: '‚Çø' },
	{ name: 'Estrategias', slug: 'estrategia', icon: 'üìä' },
	{ name: 'Brokers', slug: 'brokers', icon: 'üè¶' },
	{ name: 'Analisis Tecnico', slug: 'analisis-tecnico', icon: 'üìà' },
	{ name: 'Glosario', slug: 'glosario', icon: 'üìñ' },
];
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="hero">
				<div class="hero-content">
					<span class="hero-badge">Trading Education</span>
					<h1>Domina el Arte del<br/><span class="text-gradient">Trading Diario</span></h1>
					<p class="hero-description">
						La guia mas completa de trading en espanol. Aprende estrategias, analisis tecnico,
						y todo lo que necesitas para comenzar tu carrera como trader.
					</p>
					<div class="hero-buttons">
						<a href="/blog" class="btn">Explorar Articulos</a>
						<a href="/blog/estrategia" class="btn btn-outline">Ver Estrategias</a>
					</div>
				</div>
				<div class="hero-visual">
					<div class="hero-chart glass">
						<div class="chart-line"></div>
						<div class="chart-dots">
							<span></span><span></span><span></span><span></span><span></span>
						</div>
					</div>
				</div>
			</section>

			<!-- Categories Section -->
			<section class="categories">
				<h2>Explora por Categoria</h2>
				<div class="categories-grid">
					{categories.map((cat) => (
						<a href={`/blog/${cat.slug}`} class="category-card glass">
							<span class="category-icon">{cat.icon}</span>
							<span class="category-name">{cat.name}</span>
						</a>
					))}
				</div>
			</section>

			<!-- Latest Posts Section -->
			<section class="latest-posts">
				<div class="section-header">
					<h2>Articulos Recientes</h2>
					<a href="/blog" class="view-all">
						Ver todos
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<line x1="5" y1="12" x2="19" y2="12"></line>
							<polyline points="12 5 19 12 12 19"></polyline>
						</svg>
					</a>
				</div>
				<div class="posts-grid">
					{posts.map((post) => (
						<article class="post-card glass">
							<a href={`/blog/${post.id}/`}>
								<span class="post-date">
									<FormattedDate date={post.data.pubDate} />
								</span>
								<h3 class="post-title">{post.data.title}</h3>
								{post.data.description && (
									<p class="post-excerpt">{post.data.description}</p>
								)}
							</a>
						</article>
					))}
				</div>
			</section>

			<!-- CTA Section -->
			<section class="cta glass">
				<h2>Comienza tu Viaje en Trading</h2>
				<p>Desde principiantes hasta expertos, tenemos recursos para cada nivel.</p>
				<a href="/blog/por-que-aprender-trading" class="btn">Por que Aprender Trading</a>
			</section>
		</main>
		<Footer />
	</body>
</html>

<style>
	/* Hero Section */
	.hero {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
		padding: 4rem 0 6rem;
		min-height: 70vh;
	}

	.hero-badge {
		display: inline-block;
		padding: 0.5rem 1rem;
		background: rgba(0, 212, 170, 0.1);
		border: 1px solid rgba(0, 212, 170, 0.3);
		border-radius: 50px;
		font-size: 0.85rem;
		font-weight: 600;
		color: var(--primary);
		margin-bottom: 1.5rem;
	}

	.hero h1 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		line-height: 1.1;
		margin-bottom: 1.5rem;
	}

	.hero-description {
		font-size: 1.2rem;
		color: var(--text-secondary);
		margin-bottom: 2rem;
		max-width: 500px;
	}

	.hero-buttons {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.hero-visual {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.hero-chart {
		width: 100%;
		max-width: 400px;
		aspect-ratio: 16/10;
		padding: 2rem;
		position: relative;
		overflow: hidden;
	}

	.chart-line {
		position: absolute;
		bottom: 30%;
		left: 10%;
		right: 10%;
		height: 3px;
		background: linear-gradient(90deg, var(--primary), var(--accent));
		border-radius: 2px;
		clip-path: polygon(0 100%, 5% 60%, 20% 80%, 35% 30%, 50% 50%, 65% 20%, 80% 40%, 95% 0%, 100% 0%, 100% 100%);
	}

	.chart-dots {
		position: absolute;
		bottom: 20%;
		left: 10%;
		right: 10%;
		display: flex;
		justify-content: space-between;
	}

	.chart-dots span {
		width: 8px;
		height: 8px;
		background: var(--primary);
		border-radius: 50%;
		opacity: 0.5;
	}

	.chart-dots span:nth-child(3) {
		opacity: 1;
		box-shadow: 0 0 20px var(--primary);
	}

	/* Categories */
	.categories {
		padding: 4rem 0;
	}

	.categories h2 {
		text-align: center;
		margin-bottom: 2rem;
	}

	.categories-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
		gap: 1rem;
	}

	.category-card {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.75rem;
		padding: 1.5rem;
		text-decoration: none;
		text-align: center;
	}

	.category-icon {
		font-size: 2rem;
	}

	.category-name {
		font-weight: 600;
		font-size: 0.95rem;
		color: var(--text-primary);
	}

	.category-card:hover .category-name {
		color: var(--primary);
	}

	/* Latest Posts */
	.latest-posts {
		padding: 4rem 0;
	}

	.section-header {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-bottom: 2rem;
	}

	.section-header h2 {
		margin: 0;
	}

	.view-all {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-weight: 600;
		font-size: 0.95rem;
	}

	.posts-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
		gap: 1.5rem;
	}

	.post-card {
		padding: 0;
	}

	.post-card a {
		display: block;
		padding: 1.75rem;
		text-decoration: none;
		color: inherit;
	}

	.post-date {
		font-size: 0.85rem;
		color: var(--primary);
		font-weight: 500;
	}

	.post-title {
		font-size: 1.25rem;
		color: var(--text-primary);
		margin: 0.5rem 0;
		line-height: 1.3;
	}

	.post-excerpt {
		font-size: 0.9rem;
		color: var(--text-muted);
		margin: 0;
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	.post-card:hover .post-title {
		color: var(--primary);
	}

	/* CTA Section */
	.cta {
		text-align: center;
		padding: 4rem 2rem;
		margin: 4rem 0;
	}

	.cta h2 {
		margin-bottom: 1rem;
	}

	.cta p {
		font-size: 1.1rem;
		margin-bottom: 2rem;
	}

	/* Responsive */
	@media (max-width: 900px) {
		.hero {
			grid-template-columns: 1fr;
			text-align: center;
			padding: 2rem 0 4rem;
			min-height: auto;
		}

		.hero-description {
			margin-left: auto;
			margin-right: auto;
		}

		.hero-buttons {
			justify-content: center;
		}

		.hero-visual {
			display: none;
		}
	}

	@media (max-width: 600px) {
		.section-header {
			flex-direction: column;
			gap: 1rem;
			text-align: center;
		}

		.posts-grid {
			grid-template-columns: 1fr;
		}

		.categories-grid {
			grid-template-columns: repeat(2, 1fr);
		}
	}
</style>
