---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const featuredPost = posts[0];
const recentPosts = posts.slice(1, 7);
const morePosts = posts.slice(7, 13);
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Featured Post -->
			{featuredPost && (
				<section class="featured">
					<a href={`/blog/${featuredPost.id}/`} class="featured-link">
						<span class="featured-label">Destacado</span>
						<h1>{featuredPost.data.title}</h1>
						<p class="featured-date">
							<FormattedDate date={featuredPost.data.pubDate} />
						</p>
						{featuredPost.data.description && (
							<p class="featured-excerpt">{featuredPost.data.description}</p>
						)}
					</a>
				</section>
			)}

			<!-- Main Content Grid -->
			<div class="content-grid">
				<!-- Recent Posts -->
				<section class="posts-section">
					<h2 class="section-title">Articulos Recientes</h2>
					<div class="posts-list">
						{recentPosts.map((post) => (
							<article class="post-item">
								<a href={`/blog/${post.id}/`}>
									<h3>{post.data.title}</h3>
									<span class="post-date">
										<FormattedDate date={post.data.pubDate} />
									</span>
								</a>
							</article>
						))}
					</div>
					<a href="/blog" class="view-all">Ver todos los articulos &rarr;</a>
				</section>

				<!-- Sidebar -->
				<aside class="sidebar">
					<!-- Categories -->
					<div class="widget">
						<h3 class="widget-title">Categorias</h3>
						<ul class="category-list">
							<li><a href="/blog/forex">Forex</a></li>
							<li><a href="/blog/criptomonedas">Criptomonedas</a></li>
							<li><a href="/blog/estrategia">Estrategias</a></li>
							<li><a href="/blog/brokers">Brokers</a></li>
							<li><a href="/blog/analisis-tecnico">Analisis Tecnico</a></li>
							<li><a href="/blog/futuros">Futuros</a></li>
							<li><a href="/blog/opciones">Opciones</a></li>
						</ul>
					</div>

					<!-- More Posts Widget -->
					{morePosts.length > 0 && (
						<div class="widget">
							<h3 class="widget-title">Mas Articulos</h3>
							<ul class="more-posts">
								{morePosts.map((post) => (
									<li>
										<a href={`/blog/${post.id}/`}>{post.data.title}</a>
									</li>
								))}
							</ul>
						</div>
					)}
				</aside>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	/* Featured Section */
	.featured {
		background: var(--gray-bg);
		padding: 30px;
		margin-bottom: 30px;
		border-left: 4px solid var(--primary);
	}

	.featured-link {
		display: block;
		text-decoration: none;
	}

	.featured-label {
		display: inline-block;
		background: var(--primary);
		color: var(--white);
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		padding: 4px 10px;
		margin-bottom: 15px;
	}

	.featured h1 {
		font-size: 1.75rem;
		margin-bottom: 10px;
		color: var(--black);
	}

	.featured-link:hover h1 {
		color: var(--primary);
	}

	.featured-date {
		font-size: 0.85rem;
		color: var(--gray);
		margin-bottom: 10px;
	}

	.featured-excerpt {
		color: var(--gray);
		font-size: 0.95rem;
		margin: 0;
	}

	/* Content Grid */
	.content-grid {
		display: grid;
		grid-template-columns: 1fr 300px;
		gap: 30px;
	}

	/* Posts Section */
	.posts-section {
		min-width: 0;
	}

	.section-title {
		font-size: 1rem;
		font-weight: 700;
		text-transform: uppercase;
		color: var(--white);
		background: var(--primary);
		padding: 8px 15px;
		margin-bottom: 20px;
		display: inline-block;
	}

	.posts-list {
		display: flex;
		flex-direction: column;
		gap: 0;
	}

	.post-item {
		padding: 20px 0;
		border-bottom: 1px solid var(--gray-lighter);
	}

	.post-item:first-child {
		padding-top: 0;
	}

	.post-item a {
		display: block;
		text-decoration: none;
	}

	.post-item h3 {
		font-size: 1.1rem;
		margin-bottom: 5px;
		color: var(--black);
		transition: color 0.2s ease;
	}

	.post-item a:hover h3 {
		color: var(--primary);
	}

	.post-date {
		font-size: 0.8rem;
		color: var(--gray-light);
	}

	.view-all {
		display: inline-block;
		margin-top: 20px;
		font-weight: 600;
		font-size: 0.9rem;
		color: var(--primary);
	}

	.view-all:hover {
		text-decoration: underline;
	}

	/* Sidebar */
	.sidebar {
		display: flex;
		flex-direction: column;
		gap: 25px;
	}

	.widget {
		background: var(--gray-bg);
		padding: 20px;
	}

	.widget-title {
		font-size: 0.9rem;
		text-transform: uppercase;
		margin-bottom: 15px;
		padding-bottom: 10px;
		border-bottom: 2px solid var(--primary);
	}

	.category-list,
	.more-posts {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.category-list li,
	.more-posts li {
		padding: 8px 0;
		border-bottom: 1px solid var(--gray-lighter);
	}

	.category-list li:last-child,
	.more-posts li:last-child {
		border-bottom: none;
	}

	.category-list a,
	.more-posts a {
		font-size: 0.9rem;
		color: var(--gray-dark);
	}

	.category-list a:hover,
	.more-posts a:hover {
		color: var(--primary);
	}

	/* Responsive */
	@media (max-width: 900px) {
		.content-grid {
			grid-template-columns: 1fr;
		}

		.sidebar {
			flex-direction: row;
			flex-wrap: wrap;
		}

		.widget {
			flex: 1;
			min-width: 250px;
		}
	}

	@media (max-width: 600px) {
		.featured {
			padding: 20px;
		}

		.featured h1 {
			font-size: 1.4rem;
		}

		.sidebar {
			flex-direction: column;
		}

		.widget {
			min-width: 100%;
		}
	}
</style>
