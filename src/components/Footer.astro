<style>
	/* MH Magazine Footer Style */
	.site-footer {
		background: var(--footer-bg);
		color: #fff;
		font-size: 13px;
	}

	.footer-container {
		max-width: 1080px;
		margin: 0 auto;
		padding: 0;
	}

	.footer-widgets {
		padding: 25px 25px 0;
	}

	.footer-grid {
		display: grid;
		grid-template-columns: 1.5fr 1fr 1fr 1fr;
		gap: 25px;
	}

	.footer-widget {
		margin-bottom: 25px;
		overflow: hidden;
	}

	.footer-widget h4 {
		font-size: 14px;
		font-weight: 700;
		color: #fff;
		text-transform: uppercase;
		margin: 0 0 20px 0;
		padding-bottom: 5px;
		border-bottom: 3px solid var(--primary);
	}

	.footer-widget p {
		line-height: 1.6;
		margin: 0;
		color: #f7f7f7;
	}

	.footer-widget ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	.footer-widget li {
		padding: 5px 0;
		border-bottom: 1px dotted rgba(255, 255, 255, 0.2);
	}

	.footer-widget li:last-child {
		border-bottom: none;
	}

	.footer-widget a {
		color: #f7f7f7;
		transition: 0.25s ease-out;
	}

	.footer-widget a:hover {
		color: #f7f7f7;
	}

	/* Copyright - MH Magazine Style */
	.footer-bottom {
		padding: 10px 25px;
		border-top: 3px solid rgba(255, 255, 255, 0.3);
		background: var(--footer-bg);
		text-align: center;
	}

	.footer-bottom p {
		margin: 0;
		color: #999;
		font-size: 12px;
	}

	.footer-bottom a {
		color: #fff;
	}

	@media (max-width: 900px) {
		.footer-grid {
			grid-template-columns: 1fr 1fr;
		}
	}

	@media (max-width: 600px) {
		.footer-widgets {
			padding: 15px;
		}

		.footer-grid {
			grid-template-columns: 1fr;
			gap: 25px;
		}

		.footer-bottom {
			padding: 10px 15px;
		}
	}
</style>
