---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav class="container">
		<a href="/" class="logo">
			<span class="logo-icon">AT</span>
			<span class="logo-text">Aprende Trading</span>
		</a>
		<div class="nav-links">
			<HeaderLink href="/">Inicio</HeaderLink>
			<HeaderLink href="/blog">Articulos</HeaderLink>
			<HeaderLink href="/about">Acerca</HeaderLink>
		</div>
		<button class="mobile-menu-btn" aria-label="Menu">
			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<line x1="3" y1="12" x2="21" y2="12"></line>
				<line x1="3" y1="6" x2="21" y2="6"></line>
				<line x1="3" y1="18" x2="21" y2="18"></line>
			</svg>
		</button>
	</nav>
</header>

<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 1000;
		background: rgba(10, 15, 26, 0.8);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		border-bottom: 1px solid rgba(255, 255, 255, 0.1);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		height: var(--header-height, 80px);
		max-width: var(--max-width, 1200px);
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		text-decoration: none;
		color: var(--text-primary);
	}

	.logo:hover {
		text-shadow: none;
	}

	.logo-icon {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		background: linear-gradient(135deg, #00d4aa 0%, #6366f1 100%);
		border-radius: 12px;
		font-weight: 700;
		font-size: 1rem;
		color: #0a0f1a;
	}

	.logo-text {
		font-weight: 700;
		font-size: 1.25rem;
		background: linear-gradient(135deg, #00d4aa 0%, #6366f1 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.nav-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.nav-links :global(a) {
		padding: 0.625rem 1.25rem;
		color: var(--text-secondary);
		text-decoration: none;
		font-weight: 500;
		font-size: 0.95rem;
		border-radius: 8px;
		transition: all 0.3s ease;
	}

	.nav-links :global(a:hover) {
		color: var(--text-primary);
		background: rgba(255, 255, 255, 0.05);
		text-shadow: none;
	}

	.nav-links :global(a.active) {
		color: var(--primary);
		background: rgba(0, 212, 170, 0.1);
	}

	.mobile-menu-btn {
		display: none;
		padding: 0.5rem;
		background: transparent;
		border: none;
		color: var(--text-primary);
		cursor: pointer;
	}

	@media (max-width: 768px) {
		.nav-links {
			display: none;
		}

		.mobile-menu-btn {
			display: flex;
		}

		.logo-text {
			font-size: 1rem;
		}
	}
</style>

<script>
	// Add padding to body for fixed header
	document.body.style.paddingTop = 'var(--header-height, 80px)';
</script>
