---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<div class="header-top">
		<div class="container">
			<span class="tagline">La guia del Trading Diario</span>
		</div>
	</div>
	<div class="header-main">
		<div class="container">
			<a href="/" class="logo">
				<span class="logo-text">Aprende<span>Trading</span></span>
			</a>
		</div>
	</div>
	<nav class="nav-main">
		<div class="container">
			<div class="nav-links">
				<HeaderLink href="/">Inicio</HeaderLink>
				<HeaderLink href="/blog">Articulos</HeaderLink>
				<HeaderLink href="/blog/estrategia">Estrategias</HeaderLink>
				<HeaderLink href="/blog/brokers">Brokers</HeaderLink>
				<HeaderLink href="/blog/glosario">Glosario</HeaderLink>
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		background: var(--white);
		box-shadow: var(--shadow);
	}

	.container {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 0 20px;
	}

	/* Top bar */
	.header-top {
		background: var(--primary);
		padding: 8px 0;
	}

	.tagline {
		color: var(--white);
		font-size: 0.85rem;
	}

	/* Main header */
	.header-main {
		padding: 25px 0;
		border-bottom: 1px solid var(--gray-lighter);
	}

	.logo {
		display: inline-block;
		text-decoration: none;
	}

	.logo-text {
		font-size: 2rem;
		font-weight: 700;
		color: var(--black);
	}

	.logo-text span {
		color: var(--primary);
	}

	/* Navigation */
	.nav-main {
		background: var(--gray-bg);
		border-bottom: 1px solid var(--gray-lighter);
	}

	.nav-links {
		display: flex;
		gap: 0;
	}

	.nav-links :global(a) {
		display: block;
		padding: 12px 18px;
		color: var(--gray-dark);
		font-weight: 600;
		font-size: 0.9rem;
		text-transform: uppercase;
		transition: all 0.2s ease;
		border-bottom: 3px solid transparent;
	}

	.nav-links :global(a:hover),
	.nav-links :global(a.active) {
		color: var(--primary);
		background: var(--white);
		border-bottom-color: var(--primary);
	}

	@media (max-width: 768px) {
		.header-main {
			padding: 15px 0;
		}

		.logo-text {
			font-size: 1.5rem;
		}

		.nav-links {
			flex-wrap: wrap;
		}

		.nav-links :global(a) {
			padding: 10px 12px;
			font-size: 0.8rem;
		}
	}
</style>
