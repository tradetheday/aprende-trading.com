---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<div class="header-main">
		<div class="container">
			<a href="/" class="logo">
				<span class="logo-text">APRENDE <span>TRADING</span></span>
			</a>
			<div class="header-tagline">La guia del Trading Diario</div>
		</div>
	</div>
	<nav class="nav-main">
		<div class="container">
			<div class="nav-links">
				<HeaderLink href="/">Inicio</HeaderLink>
				<HeaderLink href="/blog">Articulos</HeaderLink>
				<HeaderLink href="/blog/estrategia">Estrategias</HeaderLink>
				<HeaderLink href="/blog/brokers">Brokers</HeaderLink>
				<HeaderLink href="/blog/glosario">Glosario</HeaderLink>
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		background: var(--header-bg);
	}

	.container {
		max-width: var(--max-width);
		margin: 0 auto;
		padding: 0 20px;
	}

	/* Main header */
	.header-main {
		padding: 15px 0;
	}

	.header-main .container {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.logo {
		display: inline-block;
		text-decoration: none;
	}

	.logo-text {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--white);
		letter-spacing: 1px;
	}

	.logo-text span {
		color: var(--primary);
	}

	.header-tagline {
		color: var(--gray-light);
		font-size: 0.85rem;
	}

	/* Navigation */
	.nav-main {
		background: var(--nav-bg);
		border-top: 1px solid rgba(255, 255, 255, 0.1);
	}

	.nav-links {
		display: flex;
		gap: 0;
	}

	.nav-links :global(a) {
		display: block;
		padding: 12px 16px;
		color: var(--white);
		font-weight: 600;
		font-size: 0.85rem;
		text-transform: uppercase;
		transition: all 0.2s ease;
		border-bottom: 3px solid transparent;
	}

	.nav-links :global(a:hover),
	.nav-links :global(a.active) {
		color: var(--primary);
		background: rgba(0, 168, 168, 0.1);
		border-bottom-color: var(--primary);
	}

	@media (max-width: 768px) {
		.header-main {
			padding: 12px 0;
		}

		.header-main .container {
			flex-direction: column;
			gap: 5px;
		}

		.logo-text {
			font-size: 1.25rem;
		}

		.header-tagline {
			font-size: 0.75rem;
		}

		.nav-links {
			flex-wrap: wrap;
			justify-content: center;
		}

		.nav-links :global(a) {
			padding: 10px 12px;
			font-size: 0.75rem;
		}
	}
</style>
